<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_frame_container"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.login.LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ic_boogie"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/bookie"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="138dp"/>


        <TextView
            android:id="@+id/tv_email_explain_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="15dp"
            android:text="이메일(아이디)"
            android:fontFamily="@font/pretendard_medium"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"
            app:layout_constraintTop_toBottomOf="@id/ic_boogie"/>

        <ImageView
            android:id="@+id/iv_email_field_bg"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:background="@drawable/bg_login_input_field"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_email_explain_text"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/et_email_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="이메일 혹은 아이디 입력"
            android:background="@null"
            android:layout_marginStart="14dp"
            app:layout_constraintStart_toStartOf="@id/iv_email_field_bg"
            app:layout_constraintTop_toTopOf="@id/iv_email_field_bg"
            app:layout_constraintBottom_toBottomOf="@id/iv_email_field_bg"/>


        <TextView
            android:id="@+id/tv_password_explain_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="25dp"
            android:text="비밀번호"
            android:fontFamily="@font/pretendard_medium"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"
            app:layout_constraintTop_toBottomOf="@id/iv_email_field_bg"/>

        <ImageView
            android:id="@+id/iv_password_field_bg"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:background="@drawable/bg_login_input_field"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_password_explain_text"
            android:layout_marginTop="10dp"/>


        <TextView
            android:id="@+id/tv_login_signup_btn"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="@color/font_main"
            android:textSize="14sp"
            android:layout_marginTop="38dp"
            android:fontFamily="@font/pretendard_semibold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_password_field_bg"/>

        <EditText
            android:id="@+id/et_password_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="비밀번호 입력"
            android:background="@null"
            android:inputType="textPassword"
            android:layout_marginStart="14dp"
            app:layout_constraintStart_toStartOf="@id/iv_password_field_bg"
            app:layout_constraintTop_toTopOf="@id/iv_password_field_bg"
            app:layout_constraintBottom_toBottomOf="@id/iv_password_field_bg"/>



        <TextView
            android:id="@+id/btn_login"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="로그인"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_confirm_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:fontFamily="@font/pretendard_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>





</FrameLayout>