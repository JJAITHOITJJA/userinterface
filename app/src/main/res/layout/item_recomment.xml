<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="70dp"
    android:layout_marginEnd="12dp"
    android:background="@drawable/bg_record_review"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:maxHeight="300dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/recomment_owner_profile_img"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/capibara"
        android:layout_marginStart="10dp"
        app:civ_border_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/item_recomment_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:fontFamily="@font/pretendard_semibold"
        android:textSize="15sp"
        android:textColor="@color/font_main"
        app:layout_constraintTop_toTopOf="@id/recomment_owner_profile_img"
        app:layout_constraintBottom_toBottomOf="@id/recomment_owner_profile_img"
        app:layout_constraintStart_toEndOf="@id/recomment_owner_profile_img"
        android:layout_marginStart="15dp"/>


    <TextView
        android:id="@+id/tv_recomment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2025.10.12 16:49PM"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="@id/item_recomment_username"/>

    <TextView
        android:id="@+id/tv_recomment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정말 인상깊었따네여"
        android:textColor="@color/font_sub"
        android:maxLines="6"
        app:layout_constraintTop_toBottomOf="@id/recomment_owner_profile_img"
        app:layout_constraintStart_toStartOf="@id/recomment_owner_profile_img"
        android:layout_marginTop="9dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>