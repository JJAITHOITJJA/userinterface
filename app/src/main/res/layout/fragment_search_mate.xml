<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_search_mate_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginStart="21dp"
        android:text="온메이트 찾기"
        android:includeFontPadding="false"
        android:textSize="20sp"
        android:textColor="@color/font_main"
        android:fontFamily="@font/pretendard_bold"/>


    <ImageView
        android:id="@+id/iv_mate_search_box"
        android:layout_width= "0dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_search_box"
        app:layout_constraintTop_toBottomOf="@id/tv_search_mate_title"/>

    <ImageView
        android:id="@+id/iv_search_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_search"
        app:layout_constraintTop_toTopOf="@id/iv_mate_search_box"
        app:layout_constraintBottom_toBottomOf="@id/iv_mate_search_box"
        app:layout_constraintStart_toStartOf="@id/iv_mate_search_box"
        android:layout_marginStart="11dp"/>

    <EditText
        android:id="@+id/et_onmate_search"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_marginStart="5dp"
        android:hint="온메이트 닉네임 혹은 아이디를 검색해주세요"
        android:background="@null"
        app:layout_constraintStart_toEndOf="@id/iv_search_icon"
        app:layout_constraintTop_toTopOf="@id/iv_search_icon"
        app:layout_constraintBottom_toBottomOf="@id/iv_search_icon"
        android:maxLines="1"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_search_list"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tool:listitem="@layout/item_onmate"
        app:layout_constraintTop_toBottomOf="@id/iv_mate_search_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>