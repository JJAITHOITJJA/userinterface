<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.login.SignUpFragment">
    <TextView
        android:id="@+id/tv_email_explain_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="35dp"
        android:text="이메일(아이디)"
        android:fontFamily="@font/pretendard_medium"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_email_field_bg"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:background="@drawable/bg_login_input_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_email_explain_text"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/et_email_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="이메일 혹은 아이디 입력"
        android:background="@null"
        android:inputType="text"
        android:layout_marginStart="14dp"
        app:layout_constraintStart_toStartOf="@id/iv_email_field_bg"
        app:layout_constraintTop_toTopOf="@id/iv_email_field_bg"
        app:layout_constraintBottom_toBottomOf="@id/iv_email_field_bg"/>



    <TextView
        android:id="@+id/tv_password_explain_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="35dp"
        android:text="비밀번호"
        android:fontFamily="@font/pretendard_medium"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@id/iv_email_field_bg"/>

    <ImageView
        android:id="@+id/iv_password_field_bg"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:background="@drawable/bg_login_input_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_password_explain_text"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/et_password_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="비밀번호 입력"
        android:background="@null"
        android:inputType="textPassword"
        android:layout_marginStart="14dp"
        app:layout_constraintStart_toStartOf="@id/iv_password_field_bg"
        app:layout_constraintTop_toTopOf="@id/iv_password_field_bg"
        app:layout_constraintBottom_toBottomOf="@id/iv_password_field_bg"/>

    <TextView
        android:id="@+id/tv_nickname_explain_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="35dp"
        android:text="닉네임"
        android:fontFamily="@font/pretendard_medium"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@id/iv_password_field_bg"/>

    <ImageView
        android:id="@+id/iv_nickname_field_bg"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:background="@drawable/bg_login_input_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_nickname_explain_text"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/et_nickname_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="닉네임 입력"
        android:background="@null"
        android:inputType="text"
        android:layout_marginStart="14dp"
        app:layout_constraintStart_toStartOf="@id/iv_nickname_field_bg"
        app:layout_constraintTop_toTopOf="@id/iv_nickname_field_bg"
        app:layout_constraintBottom_toBottomOf="@id/iv_nickname_field_bg"/>


    <TextView
        android:id="@+id/btn_signup"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="회원가입"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/bg_confirm_btn"
        android:backgroundTint="@color/g7"
        android:enabled="false"
        android:clickable="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        android:fontFamily="@font/pretendard_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>