<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view_book_search_result_item_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintDimensionRatio="300:170" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_book_search_result_item_image"
        android:layout_width="100dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1.5"
        app:cardCornerRadius="7dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/view_book_search_result_item_bg"
        app:layout_constraintBottom_toBottomOf="@id/view_book_search_result_item_bg"
        app:layout_constraintStart_toStartOf="@id/view_book_search_result_item_bg">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_item_admin_partner_location_search_result_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image_ready"/>
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/view_book_search_result_item_margin_between"
        android:layout_width="30dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/cv_book_search_result_item_image"
        app:layout_constraintTop_toTopOf="@+id/view_book_search_result_item_bg"
        app:layout_constraintBottom_toBottomOf="@+id/view_book_search_result_item_bg" />

    <LinearLayout
        android:id="@+id/ll_book_search_result_item_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/view_book_search_result_item_bg"
        app:layout_constraintBottom_toBottomOf="@id/view_book_search_result_item_bg"
        app:layout_constraintStart_toEndOf="@id/view_book_search_result_item_margin_between"
        app:layout_constraintEnd_toStartOf="@+id/tv_book_search_result_item_select">

        <TextView
            android:id="@+id/tv_book_search_result_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textSize="17sp"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/font_main"
            android:maxLines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tv_book_search_result_item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작가 / 출판사"
            android:textSize="13sp"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/font_sub"
            android:maxLines="2"
            android:ellipsize="end"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_book_search_result_item_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_page_input"
        android:gravity="center"
        android:text="선택"
        android:textSize="15sp"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/font_sub"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@id/view_book_search_result_item_bg"
        app:layout_constraintBottom_toBottomOf="@id/view_book_search_result_item_bg"
        app:layout_constraintEnd_toEndOf="@id/view_book_search_result_item_bg"/>

    <View
        android:id="@+id/view_book_search_result_item_divider"
        android:layout_width="353dp"
        android:layout_height="1dp"
        android:background="#DCDFDF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_book_search_result_item_bg"
        android:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>