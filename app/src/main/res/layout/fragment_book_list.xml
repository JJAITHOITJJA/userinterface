<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 상단 바 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/ivBackList"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="뒤로가기"
                android:visibility="gone" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/ivCalendarIconList"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_calendar"
                android:contentDescription="달력으로 이동" />
        </LinearLayout>

        <!-- 읽는 중 섹션 -->
        <TextView
            android:id="@+id/tvReadingSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="읽는 중"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="16dp"
            android:paddingTop="24dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvReadingBooks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false" />

        <!-- 완독한 책 섹션 -->
        <TextView
            android:id="@+id/tvFinishedSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="완독한 책"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="16dp"
            android:paddingTop="32dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFinishedBooks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>