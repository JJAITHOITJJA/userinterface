<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="127dp"
    android:layout_marginTop="11dp"
    android:layout_marginHorizontal="15dp"
    android:background="@drawable/group_list_box"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_group_thumbnail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="87dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="12dp"
        android:src="@drawable/sayhello"/>

    <TextView
        android:id="@+id/tv_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@id/iv_group_thumbnail"
        app:layout_constraintStart_toEndOf="@id/iv_group_thumbnail"
        android:includeFontPadding="false"
        android:text="짜잇호잇짜!!!"
        android:textColor="@color/font_main"
        android:textSize="15sp"
        android:fontFamily="@font/pretendard_semibold"/>

    <ImageView
        android:id="@+id/iv_group_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_lock"
        app:layout_constraintStart_toEndOf="@id/tv_group_name"
        app:layout_constraintTop_toTopOf="@id/tv_group_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_group_name"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/tv_group_startdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:fontFamily="@font/pretendard_regular"
        android:text="2025.10.21"
        android:textColor="@color/font_sub"
        android:layout_marginTop="6dp"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/tv_group_name"
        app:layout_constraintTop_toBottomOf="@id/tv_group_name"/>
    <TextView
        android:id="@+id/tv_group_mid_char"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:fontFamily="@font/pretendard_regular"
        android:text="~"
        android:layout_marginStart="2dp"
        android:textColor="@color/font_sub"
        android:layout_marginTop="9dp"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/tv_group_startdate"
        app:layout_constraintTop_toBottomOf="@id/tv_group_name"/>

    <TextView
        android:id="@+id/tv_group_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:fontFamily="@font/pretendard_regular"
        android:text="숭실대학교 학생들이 함께하는 독서 모임입니다.\n조금 더 길게 써야 어느정도로 나오는지 가늠이 된다구요"
        android:maxLines="2"
        android:maxWidth="190dp"
        android:textColor="@color/font_sub"
        android:layout_marginTop="6dp"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/tv_group_name"
        app:layout_constraintTop_toBottomOf="@id/tv_group_startdate"/>

    <ImageView
        android:id="@+id/iv_group_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_group_name"
        android:src="@drawable/tag_literature"
        android:layout_marginBottom="16dp"/>
    

</androidx.constraintlayout.widget.ConstraintLayout>