<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_back_record_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="3dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_record_create_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="책 기록하기"
        android:fontFamily="@font/pretendard_semibold"
        android:textSize="17sp"
        android:textColor="@color/font_main"
        app:layout_constraintStart_toEndOf="@id/iv_back_record_create"
        app:layout_constraintTop_toTopOf="@id/iv_back_record_create"
        app:layout_constraintBottom_toBottomOf="@id/iv_back_record_create"/>

    <!-- 책 제목 -->
    <TextView
        android:id="@+id/tv_book_title_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="책 제목"
        android:textSize="10sp"
        android:textColor="@color/font_main"
        android:fontFamily="@font/pretendard_regular"
        android:layout_marginStart="26dp"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_record_create_title"
        app:layout_constraintStart_toStartOf="parent"/>
    
    <ImageView
        android:id="@+id/iv_book_search_box"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginHorizontal="18dp"
        android:background="@drawable/bg_search_box"
        app:layout_constraintTop_toTopOf="@id/tv_book_title_main"
        app:layout_constraintBottom_toBottomOf="@id/tv_book_title_main"
        app:layout_constraintStart_toEndOf="@id/tv_book_title_main"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_search_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_search"
        app:layout_constraintDimensionRatio="20:20"
        app:layout_constraintWidth_percent="0.0508"
        app:layout_constraintTop_toTopOf="@id/iv_book_search_box"
        app:layout_constraintBottom_toBottomOf="@id/iv_book_search_box"
        app:layout_constraintStart_toStartOf="@id/iv_book_search_box"
        android:layout_marginStart="10dp" />
    
    <TextView
        android:id="@+id/tv_book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:maxLines="1"
        android:maxWidth="200dp"
        android:hint="책 제목을 검색하세요"
        android:textColor="@color/font_main"
        android:layout_marginStart="11dp"
        android:background="@null"
        app:layout_constraintStart_toEndOf="@id/iv_search_ic"
        app:layout_constraintTop_toTopOf="@+id/iv_book_search_box"
        app:layout_constraintBottom_toBottomOf="@+id/iv_book_search_box"/>

    <!-- 날짜 -->
    <TextView
        android:id="@+id/tv_record_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜"
        android:textSize="10sp"
        android:textColor="@color/font_main"
        android:fontFamily="@font/pretendard_regular"
        android:layout_marginStart="26dp"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_book_title_main"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/iv_record_date_bg"
        android:layout_width="130dp"
        android:layout_height="43dp"
        android:layout_marginHorizontal="18dp"
        android:background="@drawable/bg_search_box"
        app:layout_constraintTop_toTopOf="@id/tv_record_date"
        app:layout_constraintBottom_toBottomOf="@id/tv_record_date"
        app:layout_constraintStart_toEndOf="@id/tv_book_title_main" />

    <ImageView
        android:id="@+id/iv_record_calender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_calender"
        android:padding="8dp"
        app:layout_constraintDimensionRatio="20:20"
        app:layout_constraintWidth_percent="0.0508"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="@+id/iv_record_date_bg"
        app:layout_constraintTop_toTopOf="@+id/iv_record_date_bg"
        app:layout_constraintBottom_toBottomOf="@id/iv_record_date_bg"/>

    <TextView
        android:id="@+id/tv_record_selected_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="2025.10.25"
        android:textColor="@color/font_main"
        android:textSize="15sp"
        android:layout_marginStart="17dp"
        app:layout_constraintStart_toEndOf="@id/iv_record_calender"
        app:layout_constraintTop_toTopOf="@id/iv_record_date_bg"
        app:layout_constraintBottom_toBottomOf="@id/iv_record_date_bg"/>

    <ImageView
        android:id="@+id/iv_record_star_1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_star_filled"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/iv_record_date_bg"
        app:layout_constraintTop_toTopOf="@id/tv_record_date"
        app:layout_constraintBottom_toBottomOf="@id/tv_record_date"/>

    <ImageView
        android:id="@+id/iv_record_star_2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_star_filled"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/iv_record_star_1"
        app:layout_constraintTop_toTopOf="@id/tv_record_date"
        app:layout_constraintBottom_toBottomOf="@id/tv_record_date"/>

    <ImageView
        android:id="@+id/iv_record_star_3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_star_filled"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/iv_record_star_2"
        app:layout_constraintTop_toTopOf="@id/tv_record_date"
        app:layout_constraintBottom_toBottomOf="@id/tv_record_date"/>

    <ImageView
        android:id="@+id/iv_record_star_4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_star_filled"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/iv_record_star_3"
        app:layout_constraintTop_toTopOf="@id/tv_record_date"
        app:layout_constraintBottom_toBottomOf="@id/tv_record_date"/>

    <ImageView
        android:id="@+id/iv_record_star_5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_star_filled"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/iv_record_star_4"
        app:layout_constraintTop_toTopOf="@id/tv_record_date"
        app:layout_constraintBottom_toBottomOf="@id/tv_record_date"/>

    <TextView
        android:id="@+id/tv_record_page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="페이지"
        android:textSize="10sp"
        android:textColor="@color/font_main"
        android:fontFamily="@font/pretendard_regular"
        android:layout_marginStart="26dp"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_record_date"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/iv_record_page_bg_1"
        android:layout_width="120dp"
        android:layout_height="43dp"
        android:layout_marginHorizontal="18dp"
        android:background="@drawable/bg_search_box"
        app:layout_constraintTop_toTopOf="@id/tv_record_page_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_record_page_title"
        app:layout_constraintStart_toEndOf="@id/tv_book_title_main" />

    <ImageView
        android:id="@+id/iv_record_page_icon_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_book"
        android:padding="8dp"
        app:layout_constraintDimensionRatio="20:20"
        app:layout_constraintWidth_percent="0.0508"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="@+id/iv_record_page_bg_1"
        app:layout_constraintTop_toTopOf="@+id/iv_record_page_bg_1"
        app:layout_constraintBottom_toBottomOf="@id/iv_record_page_bg_1"/>

    <EditText
        android:id="@+id/et_record_page_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="0"
        android:textSize="15sp"
        android:textColor="@color/font_main"
        android:layout_marginStart="17dp"
        app:layout_constraintStart_toEndOf="@id/iv_record_page_icon_1"
        app:layout_constraintTop_toTopOf="@id/iv_record_page_bg_1"
        app:layout_constraintBottom_toBottomOf="@id/iv_record_page_bg_1"/>

    <TextView
        android:id="@+id/tv_record_page_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="page"
        android:textSize="15sp"
        android:textColor="@color/font_main"
        android:layout_marginEnd="11dp"
        app:layout_constraintEnd_toEndOf="@id/iv_record_page_bg_1"
        app:layout_constraintTop_toTopOf="@id/iv_record_page_bg_1"
        app:layout_constraintBottom_toBottomOf="@id/iv_record_page_bg_1"/>

    <TextView
        android:id="@+id/tv_record_page_between"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="~"
        android:textSize="25sp"
        android:textColor="@color/font_main"
        android:fontFamily="@font/pretendard_regular"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@+id/iv_record_page_bg_1"
        app:layout_constraintBottom_toBottomOf="@id/iv_record_page_bg_1"
        app:layout_constraintStart_toEndOf="@+id/iv_record_page_bg_1"/>

    <ImageView
        android:id="@+id/iv_record_page_bg_2"
        android:layout_width="120dp"
        android:layout_height="43dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/bg_search_box"
        app:layout_constraintTop_toTopOf="@id/tv_record_page_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_record_page_title"
        app:layout_constraintStart_toEndOf="@id/tv_record_page_between" />

    <ImageView
        android:id="@+id/iv_record_page_icon_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_book"
        android:padding="8dp"
        app:layout_constraintDimensionRatio="20:20"
        app:layout_constraintWidth_percent="0.0508"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="@+id/iv_record_page_bg_2"
        app:layout_constraintTop_toTopOf="@+id/iv_record_page_bg_2"
        app:layout_constraintBottom_toBottomOf="@id/iv_record_page_bg_2"/>

    <EditText
        android:id="@+id/et_record_page_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="0"
        android:textSize="15sp"
        android:textColor="@color/font_main"
        android:layout_marginStart="17dp"
        app:layout_constraintStart_toEndOf="@id/iv_record_page_icon_2"
        app:layout_constraintTop_toTopOf="@id/iv_record_page_bg_2"
        app:layout_constraintBottom_toBottomOf="@id/iv_record_page_bg_2"/>

    <TextView
        android:id="@+id/tv_record_page_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="page"
        android:textSize="15sp"
        android:textColor="@color/font_main"
        android:layout_marginEnd="11dp"
        app:layout_constraintEnd_toEndOf="@id/iv_record_page_bg_2"
        app:layout_constraintTop_toTopOf="@id/iv_record_page_bg_2"
        app:layout_constraintBottom_toBottomOf="@id/iv_record_page_bg_2"/>

    <TextView
        android:id="@+id/tv_record_review_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="감상평 남기기"
        android:textSize="10sp"
        android:textColor="@color/font_main"
        android:fontFamily="@font/pretendard_regular"
        android:layout_marginStart="26dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_record_page_title"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/iv_record_review_bg"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:background="@drawable/bg_record_review"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_record_review_title"
        app:layout_constraintStart_toStartOf="@id/btn_record_create"
        app:layout_constraintEnd_toEndOf="@id/iv_book_search_box"/>

    <EditText
        android:id="@+id/et_record_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="감상평을 입력하세요"
        android:textSize="15sp"
        android:textColor="@color/font_main"
        android:layout_marginStart="17dp"
        android:layout_marginTop="13dp"
        app:layout_constraintStart_toStartOf="@id/iv_record_review_bg"
        app:layout_constraintTop_toTopOf="@id/iv_record_review_bg"/>

    <TextView
        android:id="@+id/tv_select_state_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상태 선택"
        android:textSize="10sp"
        android:textColor="@color/font_main"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintTop_toBottomOf="@id/iv_record_review_bg"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="26dp"
        android:layout_marginTop="13dp"/>

    <CheckBox
        android:id="@+id/cb_record_state_reading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:button="@drawable/category_check_selector"
        android:paddingStart="8dp"
        android:fontFamily="@font/pretendard_semibold"
        android:text="읽는중"
        android:checked="true"
        android:textColor="@color/deep_gray"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/tv_select_state_title"
        app:layout_constraintTop_toBottomOf="@id/tv_select_state_title" />

    <CheckBox
        android:id="@+id/cb_record_state_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:button="@drawable/category_check_selector"
        android:paddingStart="8dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/pretendard_semibold"
        android:text="완독"
        android:textColor="@color/deep_gray"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/cb_record_state_reading"
        app:layout_constraintTop_toTopOf="@id/cb_record_state_reading"/>

    <TextView
        android:id="@+id/tv_select_category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카테고리 선택"
        android:textSize="10sp"
        android:textColor="@color/font_main"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintTop_toBottomOf="@id/iv_record_review_bg"
        app:layout_constraintStart_toEndOf="@id/cb_record_state_finish"
        android:layout_marginStart="26dp"
        android:layout_marginTop="13dp"/>

    <CheckBox
        android:id="@+id/cb_record_category_literature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:button="@drawable/category_check_selector"
        android:paddingStart="8dp"
        android:checked="true"
        android:fontFamily="@font/pretendard_semibold"
        android:text="문학"
        android:textColor="@color/deep_gray"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/tv_select_category_title"
        app:layout_constraintTop_toBottomOf="@id/tv_select_category_title" />

    <CheckBox
        android:id="@+id/cb_record_category_nonliterature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:button="@drawable/category_check_selector"
        android:paddingStart="8dp"
        android:fontFamily="@font/pretendard_semibold"
        android:text="비문학"
        android:textColor="@color/deep_gray"
        android:textSize="13sp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/cb_record_category_literature"
        app:layout_constraintTop_toTopOf="@id/cb_record_category_literature"/>

    <TextView
        android:id="@+id/tv_select_release_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="공개 여부"
        android:textSize="10sp"
        android:textColor="@color/font_main"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintTop_toBottomOf="@id/cb_record_category_literature"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="26dp"
        android:layout_marginTop="4dp"/>

    <CheckBox
        android:id="@+id/cb_record_private"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:button="@drawable/category_check_selector"
        android:paddingStart="8dp"
        android:fontFamily="@font/pretendard_semibold"
        android:text="비공개"
        android:textColor="@color/deep_gray"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/tv_select_release_title"
        app:layout_constraintTop_toBottomOf="@id/tv_select_release_title" />

    <TextView
        android:id="@+id/btn_record_create"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/bg_confirm_btn"
        android:text="확인"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="20dp"
        android:fontFamily="@font/pretendard_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>