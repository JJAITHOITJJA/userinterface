<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.group.discussion.DiscussionCreateFragment">
    <FrameLayout
        android:id="@+id/fl_discussion_create"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btn_back_group_inside"
                android:padding="8dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:src="@drawable/ic_arrow_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_add_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="책 선택"
                android:textSize="13sp"
                android:textColor="@color/font_main"
                android:fontFamily="@font/pretendard_regular"
                app:layout_constraintTop_toBottomOf="@id/btn_back_group_inside"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="26dp"
                android:layout_marginTop="30dp"/>

            <ImageView
                android:id="@+id/btn_book_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_right_arrow"
                android:padding="10dp"
                app:layout_constraintStart_toEndOf="@id/tv_add_book"
                app:layout_constraintTop_toTopOf="@id/tv_add_book"
                app:layout_constraintBottom_toBottomOf="@id/tv_add_book"/>

            <TextView
                android:id="@+id/tv_book_select_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/font_main"
                android:fontFamily="@font/pretendard_semibold"
                android:textSize="15sp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toEndOf="@id/iv_book_cover"
                app:layout_constraintTop_toTopOf="@id/iv_book_cover"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tv_book_select_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_sub"
                android:textSize="13sp"
                android:text=""
                android:fontFamily="@font/pretendard_regular"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@id/tv_book_select_title"
                app:layout_constraintTop_toBottomOf="@id/tv_book_select_title"/>

            <ImageView
                android:id="@+id/iv_book_cover"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:background="@color/g2"
                app:layout_constraintStart_toStartOf="@id/btn_back_group_inside"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_add_book"/>



            <TextView
                android:id="@+id/tv_what_is_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="토론의 주제는 무엇인가요?"
                android:textSize="15sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@id/iv_book_cover"
                app:layout_constraintTop_toBottomOf="@id/iv_book_cover"
                android:layout_marginTop="20dp"/>

            <EditText
                android:layout_width="0dp"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_what_is_topic"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:maxHeight="200dp"
                android:textSize="20dp"
                android:fontFamily="@font/pretendard_medium"
                android:background="@drawable/bg_record_review">
            </EditText>

            <TextView
                android:id="@+id/btn_group_create"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/bg_confirm_btn"
                android:text="확인"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20dp"
                android:fontFamily="@font/pretendard_semibold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="14dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>







    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
