<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/iv_back_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="3dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_settings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설정"
            android:fontFamily="@font/pretendard_semibold"
            android:textSize="17sp"
            android:textColor="@color/font_main"
            app:layout_constraintStart_toEndOf="@id/iv_back_settings"
            app:layout_constraintTop_toTopOf="@id/iv_back_settings"
            app:layout_constraintBottom_toBottomOf="@id/iv_back_settings"/>

        <View
            android:id="@+id/account_mg1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.0865"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/account_mg2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.0706"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/account_mg1"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_account_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintTop_toBottomOf="@id/account_mg2"
            app:layout_constraintStart_toEndOf="@id/account_mg1">
            <ImageView
                android:id="@+id/iv_account_profileImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/basic_profile"/>
        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/account_mg3"
            android:layout_width="0dp"
            android:layout_height="30dp"
            app:layout_constraintWidth_percent="0.0508"
            app:layout_constraintStart_toEndOf="@id/cv_account_profile"
            app:layout_constraintTop_toTopOf="@id/cv_account_profile"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/account_mg3"
            app:layout_constraintTop_toTopOf="@id/account_mg3"
            app:layout_constraintBottom_toBottomOf="@id/cv_account_profile">
            <TextView
                android:id="@+id/tv_account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_main"
                android:fontFamily="@font/pretendard_semibold"
                android:text="부기"
                android:textSize="22sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <View
                android:id="@+id/account_mg4"
                android:layout_width="2dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.065"
                app:layout_constraintTop_toBottomOf="@id/tv_account_name"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_account_imageEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/font_sub"
                android:fontFamily="@font/pretendard_medium"
                android:text="사진 수정"
                app:layout_constraintTop_toBottomOf="@id/account_mg4"
                app:layout_constraintStart_toStartOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/account_mg5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.0491"
            app:layout_constraintTop_toBottomOf="@id/cv_account_profile"
            app:layout_constraintStart_toStartOf="@id/cv_account_profile"/>

        <TextView
            android:id="@+id/tv_account_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나의 계정 설정"
            android:textColor="@color/font_main"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@id/account_mg5"
            app:layout_constraintStart_toStartOf="@id/cv_account_profile"/>

        <View
            android:id="@+id/account_mg6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.0283"
            app:layout_constraintTop_toBottomOf="@id/tv_account_setting"
            app:layout_constraintStart_toStartOf="@id/cv_account_profile"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_account_component1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.5012"
            app:layout_constraintTop_toBottomOf="@id/account_mg6"
            app:layout_constraintStart_toStartOf="@id/cv_account_profile">

            <View
                android:id="@+id/account_mg7_1"
                android:layout_width="0dp"
                android:layout_height="2dp"
                app:layout_constraintWidth_percent="0.0507"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/iv_write"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_account_logout"
                app:layout_constraintStart_toEndOf="@id/account_mg7_1"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                android:id="@+id/account_mg7_2"
                android:layout_width="0dp"
                android:layout_height="2dp"
                app:layout_constraintWidth_percent="0.0761"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_write"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="로그아웃"
                android:textColor="@color/font_main"
                android:fontFamily="@font/pretendard_medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/account_mg7_2"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/account_mg8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.0189"
            app:layout_constraintTop_toBottomOf="@id/cl_account_component1"
            app:layout_constraintStart_toStartOf="@id/cl_account_component1"/>


        <View
            android:id="@+id/account_mg10"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.0189"
            app:layout_constraintTop_toBottomOf="@id/cl_account_component1"
            app:layout_constraintStart_toStartOf="@id/cl_account_component1"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_account_component3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.5012"
            app:layout_constraintTop_toBottomOf="@id/account_mg10"
            app:layout_constraintStart_toStartOf="@id/cv_account_profile">

            <View
                android:id="@+id/account_mg11_1"
                android:layout_width="0dp"
                android:layout_height="2dp"
                app:layout_constraintWidth_percent="0.0507"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/iv_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_user"
                app:layout_constraintStart_toEndOf="@id/account_mg11_1"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                android:id="@+id/account_mg11_2"
                android:layout_width="0dp"
                android:layout_height="2dp"
                app:layout_constraintWidth_percent="0.0761"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_logout"/>

            <TextView
                android:id="@+id/tv_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="회원탈퇴"
                android:textColor="@color/font_main"
                android:fontFamily="@font/pretendard_medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/account_mg11_2"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/account_mg12"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.0441"
            app:layout_constraintTop_toBottomOf="@id/cl_account_component3"
            app:layout_constraintStart_toStartOf="@id/cl_account_component3"/>

        <TextView
            android:id="@+id/tv_account_service_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="고객센터"
            android:textColor="@color/font_main"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@id/account_mg12"
            app:layout_constraintStart_toStartOf="@id/cv_account_profile"/>

        <View
            android:id="@+id/account_mg13"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.0283"
            app:layout_constraintTop_toBottomOf="@id/tv_account_service_center"
            app:layout_constraintStart_toStartOf="@id/cv_account_profile"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_account_component4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.5012"
            app:layout_constraintTop_toBottomOf="@id/account_mg13"
            app:layout_constraintStart_toStartOf="@id/cv_account_profile">

            <View
                android:id="@+id/account_mg14_1"
                android:layout_width="0dp"
                android:layout_height="2dp"
                app:layout_constraintWidth_percent="0.0507"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/iv_folder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_account_folder"
                app:layout_constraintStart_toEndOf="@id/account_mg14_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <View
                android:id="@+id/account_mg14_2"
                android:layout_width="0dp"
                android:layout_height="2dp"
                app:layout_constraintWidth_percent="0.0761"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_folder"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="개인정보 처리방침 안내"
                android:textColor="@color/font_main"
                android:fontFamily="@font/pretendard_medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/account_mg14_2"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/account_mg15"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.0189"
            app:layout_constraintTop_toBottomOf="@id/cl_account_component4"
            app:layout_constraintStart_toStartOf="@id/cl_account_component4"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_account_component5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.5012"
            app:layout_constraintTop_toBottomOf="@id/account_mg15"
            app:layout_constraintStart_toStartOf="@id/cv_account_profile">

            <View
                android:id="@+id/account_mg16_1"
                android:layout_width="0dp"
                android:layout_height="2dp"
                app:layout_constraintWidth_percent="0.0507"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/iv_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_account_question"
                app:layout_constraintStart_toEndOf="@id/account_mg16_1"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                android:id="@+id/account_mg16_2"
                android:layout_width="0dp"
                android:layout_height="2dp"
                app:layout_constraintWidth_percent="0.0761"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_question"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="자주 묻는 질문"
                android:textColor="@color/font_main"
                android:fontFamily="@font/pretendard_medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/account_mg16_2"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/account_mg17"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.0189"
            app:layout_constraintTop_toBottomOf="@id/cl_account_component5"
            app:layout_constraintStart_toStartOf="@id/cl_account_component1"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_account_component6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.5012"
            app:layout_constraintTop_toBottomOf="@id/account_mg17"
            app:layout_constraintStart_toStartOf="@id/cv_account_profile">

            <View
                android:id="@+id/account_mg18_1"
                android:layout_width="0dp"
                android:layout_height="2dp"
                app:layout_constraintWidth_percent="0.0507"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/iv_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_account_counsl"
                app:layout_constraintStart_toEndOf="@id/account_mg18_1"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                android:id="@+id/account_mg18_2"
                android:layout_width="0dp"
                android:layout_height="2dp"
                app:layout_constraintWidth_percent="0.0761"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="고객센터"
                android:textColor="@color/font_main"
                android:fontFamily="@font/pretendard_medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/account_mg18_2"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Loading Overlay -->
        <FrameLayout
            android:id="@+id/loading_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp">

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:indeterminateTint="@color/g5" />

                <TextView
                    android:id="@+id/tv_loading_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="로딩 중..."
                    android:textColor="@color/g5"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_bold" />

            </LinearLayout>

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
