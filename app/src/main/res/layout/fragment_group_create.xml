<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/iv_back_group_search"
        android:padding="8dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_group_create_title"
        app:layout_constraintStart_toEndOf="@id/iv_back_group_search"
        app:layout_constraintTop_toTopOf="@id/iv_back_group_search"
        app:layout_constraintBottom_toBottomOf="@id/iv_back_group_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="그룹 생성하기"
        android:fontFamily="@font/pretendard_semibold"
        android:textSize="17sp"
        android:textColor="@color/font_main"/>

    <TextView
        android:id="@+id/tv_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="그룹 이름"
        android:textSize="13sp"
        android:textColor="@color/font_main"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintTop_toBottomOf="@id/tv_group_create_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="26dp"
        android:layout_marginTop="38dp"/>

    <ImageView
        android:id="@+id/iv_group_name_box"
        android:layout_width= "0dp"
        android:layout_height="43dp"
        android:layout_marginHorizontal="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_search_box"
        app:layout_constraintStart_toEndOf="@id/tv_group_name"
        app:layout_constraintTop_toTopOf="@id/tv_group_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_group_name"/>

    <EditText
        android:id="@+id/et_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_marginStart="11dp"
        android:background="@null"
        android:maxLines="1"
        android:hint="그룹 이름을 입력해주세요"
        android:maxWidth="200dp"
        android:textColor="@color/deep_gray"
        app:layout_constraintStart_toStartOf="@id/iv_group_name_box"
        app:layout_constraintTop_toTopOf="@id/iv_group_name_box"
        app:layout_constraintBottom_toBottomOf="@id/iv_group_name_box"/>

    <TextView
        android:id="@+id/tv_add_onmate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="온메이트 추가"
        android:textSize="13sp"
        android:textColor="@color/font_main"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintTop_toBottomOf="@id/cb_group_category_literature"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="26dp"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:id="@+id/btn_mate_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_right_arrow"
        android:padding="10dp"
        app:layout_constraintStart_toEndOf="@id/tv_add_onmate"
        app:layout_constraintTop_toTopOf="@id/tv_add_onmate"
        app:layout_constraintBottom_toBottomOf="@id/tv_add_onmate"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_added_mate"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tool:listitem="@layout/item_add_mate"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        app:reverseLayout="false"
        app:layout_constraintTop_toBottomOf="@id/tv_add_onmate"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_select_category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카테고리 선택"
        android:textSize="13sp"
        android:textColor="@color/font_main"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintTop_toBottomOf="@id/iv_description_box"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="26dp"
        android:layout_marginTop="30dp"/>

    <CheckBox
        android:id="@+id/cb_group_category_literature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:button="@drawable/category_check_selector"
        android:paddingStart="8dp"
        android:fontFamily="@font/pretendard_semibold"
        android:text="문학"
        android:textColor="@color/deep_gray"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/tv_select_category_title"
        app:layout_constraintTop_toBottomOf="@id/tv_select_category_title" />

    <CheckBox
        android:id="@+id/cb_group_category_nonliterature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:button="@drawable/category_check_selector"
        android:paddingStart="8dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/pretendard_semibold"
        android:text="비문학"
        android:textColor="@color/deep_gray"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/cb_group_category_literature"
        app:layout_constraintTop_toTopOf="@id/cb_group_category_literature"/>



    <TextView
        android:id="@+id/tv_password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textSize="13sp"
        android:textColor="@color/font_main"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintTop_toBottomOf="@id/tv_group_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="26dp"
        android:layout_marginTop="44dp"/>
    
    <ImageView
        android:id="@+id/iv_password_box"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.4"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="18dp"
        android:background="@drawable/bg_search_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_password_title"/>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="비밀번호"
        android:background="@null"
        android:textSize="13sp"
        android:layout_marginStart="13dp"
        app:layout_constraintTop_toTopOf="@id/iv_password_box"
        app:layout_constraintBottom_toBottomOf="@id/iv_password_box"
        app:layout_constraintStart_toStartOf="@id/iv_password_box" />

    <TextView
        android:id="@+id/tv_max_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="그룹 정원"
        android:textSize="13sp"
        android:textColor="@color/font_main"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintTop_toTopOf="@id/tv_password_title"
        app:layout_constraintStart_toStartOf="@id/iv_max_box"
        android:layout_marginStart="7dp"/>

    <ImageView
        android:id="@+id/iv_max_box"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.4"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_search_box"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toBottomOf="@id/tv_max_title"/>

    <EditText
        android:id="@+id/et_max_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="최대 8명(숫자입력)"
        android:background="@null"
        android:textSize="13sp"
        android:layout_marginStart="13dp"
        app:layout_constraintTop_toTopOf="@id/iv_max_box"
        app:layout_constraintBottom_toBottomOf="@id/iv_max_box"
        app:layout_constraintStart_toStartOf="@id/iv_max_box" />


    <TextView
        android:id="@+id/tv_group_create_description_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="그룹 설명"
        android:textSize="13sp"
        android:textColor="@color/font_main"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintTop_toBottomOf="@id/iv_password_box"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="26dp"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:id="@+id/iv_description_box"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="18dp"
        android:background="@drawable/bg_search_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_group_create_description_title"/>

    <EditText
        android:id="@+id/et_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="그룹 설명"
        android:background="@null"
        android:textSize="13sp"
        android:layout_marginStart="13dp"
        app:layout_constraintTop_toTopOf="@id/iv_description_box"
        app:layout_constraintBottom_toBottomOf="@id/iv_description_box"
        app:layout_constraintStart_toStartOf="@id/iv_description_box" />

    <TextView
        android:id="@+id/btn_group_create"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/bg_confirm_btn"
        android:text="확인"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="20dp"
        android:fontFamily="@font/pretendard_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="14dp"/>

    <TextView
        android:id="@+id/tv_select_private_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="공개 범위"
        android:textSize="13sp"
        android:textColor="@color/font_main"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintTop_toBottomOf="@id/iv_description_box"
        app:layout_constraintStart_toStartOf="@id/tv_max_title"
        android:layout_marginTop="30dp"/>

    <CheckBox
        android:id="@+id/cb_group_private"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:button="@drawable/category_check_selector"
        android:paddingStart="8dp"
        android:fontFamily="@font/pretendard_semibold"
        android:text="비공개"
        android:textColor="@color/deep_gray"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/tv_select_private_title"
        app:layout_constraintTop_toBottomOf="@id/tv_select_private_title" />


</androidx.constraintlayout.widget.ConstraintLayout>