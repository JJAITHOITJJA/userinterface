<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="127dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_group_book_item"
    android:layout_marginTop="11dp"
    android:layout_marginHorizontal="15dp">

    <ImageView
        android:id="@+id/iv_discussion_thumbnail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="87dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="12dp"
        android:src="@drawable/sayhello"/>

    <TextView
        android:id="@+id/tv_discussion_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@id/iv_discussion_thumbnail"
        app:layout_constraintStart_toEndOf="@id/iv_discussion_thumbnail"
        android:includeFontPadding="false"
        android:text="안녕이라 그랬어"
        android:textColor="@color/font_main"
        android:textSize="15sp"
        android:fontFamily="@font/pretendard_semibold"/>

    <TextView
        android:id="@+id/tv_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="김금희"
        android:layout_marginTop="6dp"
        android:textColor="@color/font_sub"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/tv_discussion_book_name"
        app:layout_constraintStart_toStartOf="@id/tv_discussion_book_name"
        />


    <TextView
        android:id="@+id/tv_discuss_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이 책에서 중점적으로 이야기 해보고 싶은 것들을 적어놓으면 참 좋을것 같아요"
        android:maxWidth="230dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/font_sub"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/tv_author_name"
        app:layout_constraintStart_toStartOf="@id/tv_discussion_book_name"
        />



</androidx.constraintlayout.widget.ConstraintLayout>