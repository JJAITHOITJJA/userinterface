<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_back_group_list"
        android:padding="8dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
        android:id="@+id/iv_group_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="5dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_group_inside_name"
        app:layout_constraintStart_toEndOf="@id/iv_back_group_list"
        app:layout_constraintTop_toTopOf="@id/iv_back_group_list"
        app:layout_constraintBottom_toBottomOf="@id/iv_back_group_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="그룹 이름~"
        android:fontFamily="@font/pretendard_semibold"
        android:textSize="17sp"
        android:textColor="@color/font_main"/>

    <TextView
        android:id="@+id/tv_group_inside_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="그룹 소개"
        android:textSize="10sp"
        android:textColor="@color/font_sub"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintTop_toBottomOf="@id/tv_group_inside_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="26dp"/>

    <TextView
        android:id="@+id/tv_group_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="돌비의 공포라디오를 들으며 사인페 작업을 하는 중인데 오랜만에 들으니까 재밌는 것 같음... 고등학교 다닐대 수학문제 풀면서 많이 들었었는데"
        android:maxLines="2"
        android:layout_marginStart="16dp"
        android:maxWidth="340dp"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@color/font_main"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_group_inside_description"/>


    <FrameLayout
        android:id="@+id/fl_discussion_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_group_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </FrameLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_top_round"
        android:layout_marginTop="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_group_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/tv_onmate_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="온메이트"
        android:textSize="10sp"
        android:textColor="@color/font_sub"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintTop_toBottomOf="@id/tv_group_description"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="26dp"
        android:layout_marginTop="33dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_group_mate"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tool:listitem="@layout/item_add_mate"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        app:reverseLayout="false"
        app:layout_constraintTop_toBottomOf="@id/tv_onmate_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_group_read_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="그룹독서 리스트"
        android:textSize="10sp"
        android:textColor="@color/font_sub"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintTop_toBottomOf="@id/rv_group_mate"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="26dp"
        android:layout_marginTop="51dp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_discussion_list"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tool:listitem="@layout/item_group_book_list"
        app:layout_constraintTop_toBottomOf="@id/tv_group_read_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_discussion_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="11dp"
        android:backgroundTint="@color/g7"
        android:src="@drawable/ic_add"
        app:tint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>